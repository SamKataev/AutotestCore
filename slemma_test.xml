<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="slemma test" parallel="tests" thread-count="3">
    <parameter name="baseURL" value="https://slemma.com"/>

    <listeners>
        <listener class-name="com.service.CustomTestListener"/>
    </listeners>

    <test verbose="1" name="http1" annotations="JDK">
        <parameter name="requestsFiles" value="
            D:/Dev/AutotestCore/src/main/resources/Sharing/GetLink.txt;
            D:/Dev/AutotestCore/src/main/resources/Sharing/CreateDeleteLink.txt;
            D:/Dev/AutotestCore/src/main/resources/Sharing/SharingObjects.txt;
            D:/Dev/AutotestCore/src/main/resources/Sharing/CreateDeleteLinkClient.txt;"/>

        <parameter name="headersFile" value="D:/Dev/AutotestCore/src/main/resources/headers.txt"/>
        <parameter name="endpoint" value="https://beta.slemma.com/api/v1/"/>
        <parameter name="ignoredProps" value="CreatedAt;ShareUrlCreateAt;SIG;Token"/>
        <classes>
            <class name="com.tests.http.HttpTestsRuntime"/>
        </classes>
    </test>

    <test verbose="1" name="http2" annotations="JDK">
        <parameter name="requestsFiles" value="
            D:/Dev/AutotestCore/src/main/resources/Access/AccessEdit.txt;
            D:/Dev/AutotestCore/src/main/resources/Access/AccessEditReader.txt;
            D:/Dev/AutotestCore/src/main/resources/Access/AccessEditClient.txt;"/>

        <parameter name="headersFile" value="D:/Dev/AutotestCore/src/main/resources/headers.txt"/>
        <parameter name="endpoint" value="https://beta.slemma.com/api/v1/"/>
        <parameter name="ignoredProps" value="CreatedAt;ShareUrlCreateAt;SIG;Token"/>
        <classes>
            <class name="com.tests.http.HttpTestsRuntime"/>
        </classes>
    </test>

