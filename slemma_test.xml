<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="slemma test" parallel="tests" thread-count="3">
    <parameter name="baseURL" value="https://slemma.com"/>

    <listeners>
        <listener class-name="com.service.CustomTestListener"/>
    </listeners>

    <test verbose="1" name="http" annotations="JDK">
        <parameter name="files" value="D:/Dev/AutotestCore/src/main/resources/api_tests1.txt;
                                            D:/Dev/AutotestCore/src/main/resources/api_tests2.txt;
                                            D:/Dev/AutotestCore/src/main/resources/api_tests3.txt"/>
        <parameter name="ignoredProps" value="CreatedAt;SIG;Token;Key"/>
        <classes>
            <class name="com.tests.http.HttpTestsRuntime"/>
        </classes>
    </test>

    <test verbose="1" name="web1" annotations="JDK">
        <parameter name="threadId" value="thread2"/>
        <classes>
            <class name="com.tests.ui.slemmauitests.LoginAndRegister"/>
            <class name="com.tests.ui.slemmauitests.Navigator"/>
        </classes>
    </test>

    <test verbose="1" name="web2" annotations="JDK">
        <parameter name="threadId" value="thread3"/>
        <classes>
            <class name="com.tests.ui.slemmauitests.LoginAndRegister"/>
            <class name="com.tests.ui.slemmauitests.Navigator"/>
        </classes>
    </test>

</suite>